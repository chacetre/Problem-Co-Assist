<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Image" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/gradient"></FrameLayout>

        <LinearLayout
            android:id="@+id/ln_names"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="115dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/firstNameDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FirstName"
                android:textColor="#FFF"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/lastNameDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="LastName"
                android:textColor="#FFF"

                android:textSize="24dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/userIdDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ln_names"
            android:layout_below="@id/ln_names"
            android:text="Login"
            android:textColor="#FFF"
            android:textSize="18dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/fond"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="Date"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/registerDateDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:text="Date"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_date"
            android:layout_marginRight="8sp"
            android:text="Mail"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mail"
            android:layout_marginRight="8dp"
            android:text="Address"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_addr"
            android:layout_marginRight="8dp"
            android:text="Password"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/emailDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/registerDateDetail"
            android:layout_below="@id/registerDateDetail"
            android:text="EMAIL"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/addressDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/emailDetail"
            android:layout_below="@id/emailDetail"
            android:text="Address"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/passewordDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/addressDetail"
            android:layout_below="@id/addressDetail"
            android:text="passeword"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>
