<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fond"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/t_firstname"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="FirstName"
        android:gravity="center"/>

    <EditText
        android:id="@+id/e_firstname"
        android:layout_width="200dp"
        android:layout_height="50dp"
       />
</LinearLayout>

<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/t_lastname"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="LastName : "
        android:gravity="center"/>

    <EditText
        android:id="@+id/e_lastname"
        android:layout_width="200dp"
        android:layout_height="50dp"
       />
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/t_pwd"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="PassWord"
        android:gravity="center"/>

    <EditText
        android:id="@+id/e_pwd"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/t_pwd"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/UserID"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="UserID :"
            android:gravity="center"/>

        <EditText
            android:id="@+id/e_UserID"
            android:layout_width="200dp"
            android:layout_height="50dp"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/t_email"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Email :"
            android:gravity="center"/>

        <EditText
            android:id="@+id/e_email"
            android:layout_width="200dp"
            android:layout_height="50dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/t_address"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Address :"
            android:gravity="center"/>

        <EditText
            android:id="@+id/e_address"
            android:layout_width="200dp"
            android:layout_height="50dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/t_img"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Image URL :"
            android:gravity="center"/>

        <EditText
            android:id="@+id/e_img"
            android:layout_width="200dp"
            android:layout_height="50dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/registration_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"/>

</LinearLayout>